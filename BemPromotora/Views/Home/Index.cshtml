@model IEnumerable<BemPromotora.Models.Usuario>

@{
    ViewData["Title"] = "Inicio";
}

<h2>Lista de beneficiários</h2>

<p>
    <a asp-action="Create">Criar novo beneficiário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Faixa de idade")
            </th>
            <th>
                @Html.DisplayName("Convênio")
            </th>
            <th>
                @Html.DisplayName("Faixa salárial")
            </th>
            <th>
                @Html.DisplayName("Motivo do empréstimo")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FaixaIdade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Convenio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaixaSalarial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotivoEmprestimo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
