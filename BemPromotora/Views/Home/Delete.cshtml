@model BemPromotora.Models.Usuario

@{
    ViewData["Title"] = "Deletar";
}

<h2>Deletar</h2>

<h3>Tem certeza que quer deletar isso?</h3>
<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Faixa de idade")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FaixaIdade)
        </dd>
        <dt>
            @Html.DisplayName("Convenio")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Convenio)
        </dd>
        <dt>
            @Html.DisplayName("Faixa de salário")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FaixaSalarial)
        </dd>
        <dt>
            @Html.DisplayName("Motivo do emprestimo")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MotivoEmprestimo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-default" /> |
        <a asp-action="Index">Voltar para lista</a>
    </form>
</div>
